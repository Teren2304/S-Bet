mixin menu
  menu.menu&attributes(attributes)
    .menu__item.menu__item--active
      a(href="index.html").menu__link
        span.menu__text Sports
    .menu__item
      a(href="inplay.html").menu__link
        span.menu__text in-play
    .menu__item
      a(href="promotion.html").menu__link
        span.menu__text Promotion
    .menu__item
      a(href="results.html").menu__link
        span.menu__text Results
    .menu__item
      a.menu__link
        span.menu__text Inner Pages
        i.fas.fa-angle-down.menu__icon
      .menu__dropdown
        +submenu-sm.submenu--sm
    .menu__item
      a.menu__link
        span.menu__text Pages
        i.fas.fa-angle-down.menu__icon
      .menu__dropdown.menu__dropdown--lg
        +submenu-lg.submenu--lg
    .menu__item
      a(href="contact.html").menu__link
        span.menu__text Contact us
