mixin search
  .search.js-search&attributes(attributes)
    input(type="text" placeholder="Enter your search request here...").search__filed.js-search-filed
    a.search__icon
      svg(aria-hidden='true' width='18' height='18' viewBox='0 0 18 18')
        path(d='M18 16.5l-5.14-5.18h-.35a7 7 0 10-1.19 1.19v.35L16.5 18l1.5-1.5zM12 7A5 5 0 112 7a5 5 0 0110 0z')
    .search__dropdown.js-search-dropdown
      .search__block
        h5.search__title quick result
      .search__wrapper
        - var n = 1
        while n < 6
          .search__block
            h6.search__subtitle= 'Schedule' + n++
            p.search__text Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus debitis dolores dolorum eum inventore iste minus nemo neque quasi reiciendis reprehenderit sequi, voluptates voluptatibus? Accusantium architecto culpa nisi reiciendis ullam!
      .search__block.padding
        +button('see onther 24 results').button--primary
