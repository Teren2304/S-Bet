mixin betslip
  .betslip&attributes(attributes)
    .betslip__header.js-betslip-header
      .betslip__count 3
      p Placing a bet
      .betslip__close
        svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 320 512')
          path(fill='currentColor' d='M193.94 256L296.5 153.44l21.15-21.15c3.12-3.12 3.12-8.19 0-11.31l-22.63-22.63c-3.12-3.12-8.19-3.12-11.31 0L160 222.06 36.29 98.34c-3.12-3.12-8.19-3.12-11.31 0L2.34 120.97c-3.12 3.12-3.12 8.19 0 11.31L126.06 256 2.34 379.71c-3.12 3.12-3.12 8.19 0 11.31l22.63 22.63c3.12 3.12 8.19 3.12 11.31 0L160 289.94 262.56 392.5l21.15 21.15c3.12 3.12 8.19 3.12 11.31 0l22.63-22.63c3.12-3.12 3.12-8.19 0-11.31L193.94 256z')
    h6.h6.betslip__remove Remove All
    .betslip__body
      - var n = 0
      while n <= 3
        .betslip__item
          .betslip__cell
            .betslip__icon
              svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 320 512')
                path(fill='currentColor' d='M193.94 256L296.5 153.44l21.15-21.15c3.12-3.12 3.12-8.19 0-11.31l-22.63-22.63c-3.12-3.12-8.19-3.12-11.31 0L160 222.06 36.29 98.34c-3.12-3.12-8.19-3.12-11.31 0L2.34 120.97c-3.12 3.12-3.12 8.19 0 11.31L126.06 256 2.34 379.71c-3.12 3.12-3.12 8.19 0 11.31l22.63 22.63c3.12 3.12 8.19 3.12 11.31 0L160 289.94 262.56 392.5l21.15 21.15c3.12 3.12 8.19 3.12 11.31 0l22.63-22.63c3.12-3.12 3.12-8.19 0-11.31L193.94 256z')
            h6.h6.betslip__title Draw
            p.betslip__market Fulltime Result
            p.betslip__partiscipants
              span Chelsea
              span vs
              span Manchester Utd.
          .betslip__cell
            input(type="number").field.betslip__stake
            h6.h6.betslip__odd= n++ + ".34"
    .betslip__total
      p Number Of Bets
      h6.h6 57
    .betslip__total
      p STAKE
      h6.h6 57
    .betslip__total
      p WINNINGS
      h6.h6 25
    .betslip__footer
      +button('place bet').button--primary.betslip__placebet
